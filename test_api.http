###############################################
# STATIONS API
###############################################

### GET toutes les stations
GET http://localhost:8080/Atelier5_backend-1.0-SNAPSHOT/api/stations
Accept: application/json

### GET une station par ID
GET http://localhost:8080/Atelier5_backend-1.0-SNAPSHOT/api/stations/1
Accept: application/json

### POST créer une nouvelle station
POST http://localhost:8080/Atelier5_backend-1.0-SNAPSHOT/api/stations
Content-Type: application/json

{
  "nom": "Station Centrale",
  "ville": "Tanger",
  "adresse": "Boukhalef"
}

### PUT mettre à jour une station
PUT http://localhost:8080/Atelier5_backend-1.0-SNAPSHOT/api/stations
Content-Type: application/json

{
  "id": 1,
  "nom": "Station Centrale Modifiée",
  "ville": "Casablanca"
}

### DELETE supprimer une station
DELETE http://localhost:8080/Atelier5_backend-1.0-SNAPSHOT/api/stations/3


