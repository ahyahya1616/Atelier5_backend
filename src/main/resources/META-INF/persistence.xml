<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
                                 https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <!-- Nom de ton unité de persistance -->
    <persistence-unit name="pu" transaction-type="JTA">
        <!-- WildFly gère les transactions -->
        <jta-data-source>java:/jdbc/StationDS</jta-data-source>

        <!-- Entités de ton projet -->
        <class>ma.fstt.atelier5_backend.entities.Station</class>
        <class>ma.fstt.atelier5_backend.entities.Carburant</class>
        <class>ma.fstt.atelier5_backend.entities.HistoCarb</class>

        <properties>
            <property name="jakarta.persistence.provider" value="org.hibernate.jpa.HibernatePersistenceProvider"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
            <property name="hibernate.connection.charSet" value="UTF-8"/>
        </properties>

    </persistence-unit>

</persistence>
